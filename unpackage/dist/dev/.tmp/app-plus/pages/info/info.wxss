
page{
	background: #FFFFFF;
	height: 100%;
}
.form-group{
	color: #666666;
	font-size: 28rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding: 40rpx 0;
	border-top: 1px solid #EAEAEA;
}
.form-group label{
	width: 30%;
}
.form-group input, .form-group .box-picker, .form-group ._span{
	width: 70%;
	color: #222222;
	font-size: 28rpx;
}
.form-button {
	margin: 40rpx 0;
	border:#2C405A;
	border-radius: 100rpx;
	padding: 12rpx 0;
	font-size: 30rpx;
	background-color: #DDDDDD;
	color: #FFFFFF;
}
.form-button:after{
	width: 0;
	height: 0;
}
.form-button-active{
	background-color: #008EFF !important;
}
.box-picker{
	width: 80%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	position: relative;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	    -ms-flex-pack: end;
	        justify-content: flex-end;
}
.box-picker picker{
	width: 100%;
	margin-right: 40rpx;
}
.box-picker image{
	width: 30rpx;
	height: 30rpx;
	top: 50%;
	right: 0;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	position: absolute;
}

