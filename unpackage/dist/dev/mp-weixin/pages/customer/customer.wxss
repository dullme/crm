
.user-card{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding-top: 26rpx;
}
.user-card .avatar image{
	width: 80rpx;
	height: 80rpx;
	border-radius: 50%;
	background-color: #F4F4F4;
	padding: 30rpx;
	margin-right: 20rpx;
}
.avatar-right{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	    -ms-flex-direction: column;
	        flex-direction: column;
	width: 100%;
	padding: 15rpx 0;
}
.top-title{
	font-size: 36rpx;
	color: #222222;
	margin-bottom: 25rpx;
	font-weight: 700;
}
.bottom-title{
	font-size: 28rpx;
	color: #666666;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
}
.bottom-title ._span:first-child{
	margin-right: 30rpx;
}
.box-list {
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding: 80rpx 20rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.box{
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	border-radius: 15rpx;
	text-align: center;
}
.box ._span{
	color: #666666;
	font-size: 28rpx;
}
.box .icon{
	text-align: center;
	margin: 0 auto;
	width: 90rpx;
	height: 65rpx;
}
.box .icon image{
	text-align: center;
	width: 80%;
	height: 80%;
}
.line{
	height: 20rpx;
	background-color: #F4F4F4;
	margin-left: -40rpx;
	margin-right: -40rpx;
}
.button-box {
	color: #666666;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
	padding: 60rpx 0;
	border-bottom: 1px solid #EAEAEA;
	position: relative;
}
.button-box .box-left{
	width: 90%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.button-box .box-left ._span:first-child{
	font-size: 30rpx;
}
.button-box .box-left .tag{
	font-size: 24rpx;
	padding: 0 20rpx;
	background-color: #FF4444;
	border-radius: 100rpx;
	color: #FFFFFF;
}
.button-box image{
	width: 30rpx;
	height: 30rpx;
	top: 50%;
	right: 0;
	-webkit-transform: translateY(-50%);
	    -ms-transform: translateY(-50%);
	        transform: translateY(-50%);
	position: absolute;
}

