
.form-group{
	color: #666666;
	font-size: 28rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	padding: 40rpx 0;
	border-top: 1px solid #EAEAEA;
}
.form-group label{
	width: 30%;
}
.form-group input{
	width: 70%;
	color: #222222;
	font-size: 28rpx;
}
.form-button {
	margin: 40rpx 0;
	border:#2C405A;
	border-radius: 100rpx;
	padding: 12rpx 0;
	font-size: 30rpx;
	background-color: #DDDDDD;
	color: #FFFFFF;
}
.form-button:after{
	width: 0;
	height: 0;
}
.form-button-active{
	background-color: #008EFF !important;
}

