<view class="body"><view class="top-user-card"><view class="avatar"><image src="../../static/icons/lianxiren@3x.png"></image></view><view class="avatar-right"><view class="top-title"><label class="_span">{{name}}</label></view><view class="bottom-title"><label class="_span">{{"负责人："+user_name}}</label><view class="content-by-mobile"><image src="../../static/icons/mobile.png"></image><label class="_span">{{"："+mobile}}</label></view></view><view class="bottom-title" style="margin-top:30rpx;margin-bottom:20rpx;display:flex;justify-content:space-between;"><label class="_span">{{"状态："+status_name[customer.status]}}</label><block wx:if="{{customer.status!=1}}"><label data-event-opts="{{[['tap',[['customerEnd',['$event']]]]]}}" class="end-button _span" bindtap="__e">结束拜访</label></block></view></view></view><view class="body-follow"><block wx:if="{{customer.status!=1}}"><view class="visit-form visit-form-first"><view class="form-group"><label>记录类型</label><view class="box-picker"><picker mode="selector" range="{{type}}" data-event-opts="{{[['change',[['typeSelect',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{type[type_index]}}</view></picker><image src="../../static/icons/xiangqing@3x.png"></image></view></view><view class="form-group"><label>重访日期</label><view class="box-picker"><picker mode="date" value="{{date}}" data-event-opts="{{[['change',[['bindDateChange',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{date}}</view></picker><image src="../../static/icons/xiangqing@3x.png"></image></view></view><view class="form-group"><label>重访时间</label><view class="box-picker"><picker mode="time" value="{{time}}" data-event-opts="{{[['change',[['bindTimeChange',['$event']]]]]}}" bindchange="__e"><view class="uni-input">{{time}}</view></picker><image src="../../static/icons/xiangqing@3x.png"></image></view></view><view class="form-group" style="border-bottom:0;"><label></label><view class="box-picker"><view class="uni-textarea"><textarea placeholder="备注" data-event-opts="{{[['input',[['__set_model',['','remark','$event',[]]]]]]}}" value="{{remark}}" bindinput="__e"></textarea></view></view></view><button data-event-opts="{{[['tap',[['formSubmit',['$event']]]]]}}" class="form-button form-button-active" bindtap="__e">盯一下</button></view></block><view class="visit-form"><view class="user-card user-card-title" style="border:0;"><label class="title _span">跟进记录</label><block wx:if="{{follow_list.length>1}}"><view data-event-opts="{{[['tap',[['orderBy',['$event']]]]]}}" bindtap="__e"><block wx:if="{{order==1}}"><image src="../../static/icons/down.png"></image></block><block wx:if="{{order==0}}"><image src="../../static/icons/up.png"></image></block></view></block></view><block wx:if="{{follow_list.length}}"><view><block wx:for="{{follow_list}}" wx:for-item="item" wx:for-index="__i0__"><view class="user-card"><view class="avatar"><image src="../../static/icons/lianxiren@3x.png"></image></view><view class="avatar-right"><view class="top-title"><label class="_span">{{user_name}}</label></view><view class="bottom-title"><label class="_span">{{type[item.type]}}</label><label class="_span">{{item.visited_at}}</label></view></view></view></block></view></block><block wx:else><view style="padding-bottom:40rpx;min-height:200rpx;display:flex;align-items:center;justify-content:center;color:#D9D9D9;font-size:35rpx;">暂无记录</view></block></view></view></view>